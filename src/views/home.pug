extends base
include mixins/restaurant

block content
  div.dashboard__Background
  div.topScreen__Container
    h1 우리 오늘 어디갈까?
    form(action="/search" method="GET")
      div
        input(type="text" name="search" placeholder="캠퍼스, 식당 또는 장소")
        button(name="search")
          i.fa-solid.fa-magnifying-glass.fa-2x
  div.main__Container
    h1 요즘 뜨는 장소들
    h3 윗지앤유에서 사랑 받고 있는 장소들입니다.
    div.placeBox__Container.slide-wrapper
      ul.slides 
        li
        li 
        li 
        li
        li
        li
    p.slide-controls
      span.slidePrev prev
      span.slideNext next
  
  div.hidden
    form(action="/search" method="GET")
      select(id="campus" name="campus")
        option(value="") 캠퍼스를 선택하세요.
        option(value="") 전체보기
        option(value="가좌동") 가좌캠퍼스
      button(name="type" value="restaurant") 맛집
      button(name="type" value="dessert") 카페/디저트
      button(name="type" value="bar") 술집/바
      button(name="type" value="delivery") 배달

block scripts
  script(src="/static/js/slider.js")