extends ../base.pug

block content
  header
  main
    h1=restaurant.name
    div 
      each hashtag in restaurant.info.hashtags
        small #{hashtag} 
    h3=restaurant.info.location
    h3=restaurant.info.time
    h3=restaurant.info.contact

    if loggedIn
      div
        form#commentForm
          label(for="commentRating") 평점
          input(type="range" min="1" max="5" id="commentRating" name="commentRating")
          label(for="commentReview") 리뷰
          textarea(cols="30", rows="10", placeholder="악의적인 리뷰는 무통보 삭제될 수 있습니다." id="commentReview")
          label(for="commentImg") 사진
          input(type="file" id="commentImg", accept="image/*" multiple)
          button 작성
  
    div
      ul
        each comment in restaurant.comments.reverse()
          li(data-commentId=comment._id)
            i.fas.fa-comment
            span   #{comment.text}
            if String(comment.owner) === String(loggedInUser._id)
              span   ❌
block scripts
  script(src="/static/js/commentSection.js")